<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    tools:context="com.campuspedia.campuspedia.activity.RegistrationActivity">

    <Button
        android:id="@+id/button_back"
        android:layout_height="35dp"
        android:layout_width="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/icon_left"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Create a New Account"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/input_registration_name"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/et_style"
        android:drawableLeft="@drawable/icon_user"
        android:drawablePadding="10dp"
        android:hint="Name"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/input_registration_email"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/input_registration_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/et_style"
        android:drawableLeft="@drawable/icon_email"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/input_registration_password"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/input_registration_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/et_style"
        android:drawableLeft="@drawable/icon_password"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_registration_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="I accept Terms and Conditions."
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button_register"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/text2"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/btn_style_1"
        android:textAllCaps="false"
        android:text="Register"
        android:textColor="#D75F7F"
        android:textSize="20sp"/>

</RelativeLayout>

