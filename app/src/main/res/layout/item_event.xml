<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/custom_cardview"
    android:orientation="horizontal"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_event"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/text_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="8dp"
            android:text="Event Name"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/image_event"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_event_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:text="Event Category"
            app:layout_constraintLeft_toLeftOf="@+id/text_event_name"
            app:layout_constraintTop_toBottomOf="@+id/text_event_name"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_conversion_absoluteWidth="94dp"
            tools:layout_conversion_absoluteX="86dp"
            tools:layout_conversion_absoluteY="32dp" />

        <TextView
            android:id="@+id/text_event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:text="Location"
            app:layout_constraintLeft_toLeftOf="@+id/text_event_category"
            app:layout_constraintTop_toBottomOf="@+id/text_event_category" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>